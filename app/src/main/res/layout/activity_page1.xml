<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:background="@drawable/police" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TN POLICE CITIZEN SERVICE"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="373dp"
            android:layout_height="74dp"
            android:layout_marginTop="36dp"
            android:text="COMPLIANT REGISTRATION"
            android:textSize="22dp"
            android:background="#2988D3"
            android:textStyle="bold"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTintMode="screen"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subjects"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="6dp"
                android:text="subject*"
                android:textColor="#555555" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp" />

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/district"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="6dp"
                android:text="District*"
                android:textColor="#555555" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/districts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/village"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="6dp"
                android:text="Taulk*"
                android:textColor="#555555" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/villages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:hint="Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/genders"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/districts"
                android:layout_marginTop="18dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="6dp"
                android:text="Gender*"
                android:textColor="#555555" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/birth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/baseline_calendar_month_24"
                    android:hint="DateOfBirth" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/baseline_phone_android_24"
                    android:hint="MobileNO" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/baseline_mail_24"
                    android:hint="Email" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/baseline_location_on_24"
                    android:hint="Address" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/occur"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/baseline_calendar_month_24"
                    android:hint="Date Of Occurrence" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="left"
                android:layout_marginTop="22dp"
                android:background="@color/material_dynamic_neutral95"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:gravity="center"
                android:hint="Select a current location" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/editText"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/baseline_location_on_24"
                    android:hint="Current place" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/baseline_note_alt_24"
                    android:hint="Description" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/camera"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black"
                android:layout_marginTop="11dp"
                android:text="Take Camera"
                android:drawableLeft="@drawable/baseline_add_a_photo_24"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/register"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@color/material_dynamic_neutral95"
                android:text="REGISTER"
                android:textSize="22dp"
                android:layout_marginBottom="48dp"/>

            <TextView
                android:id="@+id/complaintId"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#008080"
                android:textSize="28sp"
                android:layout_marginBottom="300dp"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>